{
  "name": "personalkit",
  "displayName": "PersonalKit",
  "description": "mixed stew",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "todoTreeView",
          "name": "TODO"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "extension.deleteTodo",
          "group": "1_modification",
          "when": "view == todoTreeView && viewItem == todoItem"
        },
        {
          "command": "extension.renameTodo",
          "group": "1_modification",
          "when": "view == todoTreeView && viewItem == todoItem"
        }
      ]
    },
    "commands": [
      {
        "command": "personalkit.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "extension.addTodo",
        "title": "Add TODO"
      },
      {
        "command": "extension.deleteTodo",
        "title": "Delete TODO"
      },
      {
        "command": "extension.renameTodo",
        "title": "Rename TODO"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "个人工具箱",
      "properties": {
        "personalkit.salary.monthlySalary": {
          "type": "number",
          "default": 10000,
          "description": "月薪"
        },
        "personalkit.salary.workStartTime": {
          "type": "number",
          "default": 9,
          "description": "上班时间，以24小时制表示"
        },
        "personalkit.salary.workEndTime": {
          "type": "number",
          "default": 18,
          "description": "下班时间，以24小时制表示"
        },
        "personalkit.salary.totalWorkDays": {
          "type": "number",
          "default": 22,
          "description": "每月总工作天数"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.89.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  }
}
